doctype html
html(lang="eng")
    head

        title="Twitter clone"
    body
        nav(class="top-menu")
            ul(class="actions")
                li(class="item active") <a href=""><span class="icon icon-home"></span><span class="text">Home<span></a>
                li(class="item") <a href=""><span class="icon icon-lightning"></span><span class="text">Moments</span></a>
                li(class="item") <a href=""><span class="icon icon-bell"></span><span class="text">Notifications</span></a>
                li(class="item") <a href=""><span class="icon icon-message"></span><span class="text">Messages</span></a>
            
            div(class="logo") <img src="assets/images/twitter.png" width="25"/>

            ul(class="info")
                li(class="item") <form><input type="text" placeholder="Search Twitter"/><span class="icon icon-search"></span></form>
                li(class="item") <img class="profile" src="assets/images/profile.jpg" width="35"/>
                li(class="item") <button class="icon icon-tweet tweet-button"></button>

        div(class="container")
            section(class="fix-nav first border")
                div(class="cover-image")
                    <img src="http://lorempixel.com/400/200/"/>
                div(class="profile-image")
                    <img src="http://lorempixel.com/200/200/" class="border"/>
                    
                    div(class="user-info")
                        <h1>Marabesi</h1>
                        <p>@MatheusMarabesi</p>
                        
                div(class="clear")

                div(class="stats")
                    <small>Tweet</small>
                    <h1>10</h1>

                div(class="stats")
                    <small>Following</small>
                    <h1>10</h1>

                div(class="stats")
                    <small>Followers</small>
                    <h1>10</h1>

            section(class="fix-nav second")
            section(class="fix-nav third")

        script(src="app.bundle.js")